echo "APPTheShelf v.01"
echo ""
echo "Available Commands:"
echo "-------------------"
echo "-la                 - same as -l -a"
echo "-l                  - list all available apps"
echo "-lxc                - list all lxc containers and their state"
echo "-deploy  name       - deploy dir to app (-dir)"
echo "-delete  name       - delete specified app"
echo "-start   name       - start specified app"
echo "-restart name       - restart specified app"
echo "-stop    name       - stop specified app"
echo "-create             - create app (opt: -name, -eport, -iport, -guestdir)"
echo "-onestop name       - create if app not exist, then deploy (-dir opt: -eport -iport)"
echo "-listfw  opt:filter - list guest firewall configuration, optional filter"
echo "-ssh     name       - ssh connect to specified app"
echo "-archive name       - archive specified app"
echo "-restore archive    - restore specified archive to app"
echo "-ansible name       - get ansible host string for app"
echo "-setup              - install or setup default settings"
echo "-rename  old new    - rename app from <old> to <new>"
echo "-h                  - print this help"
echo ""
echo "Option Specifications:"
echo "----------------------"
echo "-con     user@host  - use specified connection insted of default"
echo "-dir     directory  - deploy from specified directory"
echo "-eport   portnum    - route from guest port (requires -iport)"
echo "-iport   portnum    - route to container port (requires -eport)"
echo "-a                  - include archive in app listing"
echo "-guestdir guest_dir  - allow app to read <guest_dir> under"
echo ""
