echo "APPTheShelf v.01"
echo ""
echo "Available Commands:"
echo "-------------------"
echo "-l                  - list all available apps"
echo "-lxc                - list all lxc containers and their state"
echo "-deploy  appID      - deploy dir to app (-dir)"
echo "-del     appID      - delete specified app"
echo "-start   appID      - start specified app"
echo "-restart appID      - restart specified app"
echo "-stop    appID      - stop specified app"
echo "-create             - create app (opt: -name, -eport, -iport)"
echo "-onestop            - create if app not exist, then deploy (-name -dir opt: -eport -iport)"
echo "-listfw  opt:filter - list guest firewall configuration, optional filter"
echo "-ssh     appID      - ssh connect to specified app"
echo "-archive appID      - archive specified app (opt: -hint)"
echo "-restore archive    - restore specified archive to app"
echo "-ansible appID      - get ansible host string for app (-ahost)"
echo "-ahost   appID      - set ansible hostname"
echo "-setup              - install or setup default settings"
echo "-h                  - print this help"
echo ""
echo "Option Specifications:"
echo "----------------------"
echo "-connect user@host  - use specified connection insted of default"
echo "-dir     directory  - deploy from specified directory"
echo "-eport   portnum    - route from guest port (requires -iport)"
echo "-iport   portnum    - route to container port (requires -eport)"
echo "-name    name       - name of the app to create"
echo "-a                  - include archive in app listing"
echo "-hint    appID      - archive specified app"
echo ""
