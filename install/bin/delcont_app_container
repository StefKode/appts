###############################################################################


name="$1"

testName="$(echo $name | grep '^app-[0-9]*$')"

cd /var/lib/lxc

if [ ! -d "$name" ]; then
	echo "App $name does not exist"
	exit 1
fi

if [ "$testName" = "" ]; then
	echo "App $name cannot be deleted"
	exit 1
fi

cd $name/rootfs/home/app
if [ $? -eq 0 ]; then
	rm -rf code 
	mkdir -p code
	chown 1000.1000 code
else
	echo "error"
fi
